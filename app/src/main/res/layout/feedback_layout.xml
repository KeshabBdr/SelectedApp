<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_rect_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/cus_alert_header"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rotaractnepalapp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="@string/about_us_title"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/colorPrimaryLight">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/colorPrimaryLight"
            app:counterEnabled="true"
            app:counterMaxLength="160">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Feedback"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>
        <com.rey.material.widget.Button
            android:id="@+id/submitBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/white"
            android:text="Submit your Feedback"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</RelativeLayout>