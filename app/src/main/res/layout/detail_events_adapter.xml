<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lastYearDistEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        android:layout_margin="5dp"
        android:text="@string/last_year_events_details"/>
    <View
        android:id="@+id/infoLastYearDistEvventsUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="55dp"
        android:layout_below="@id/lastYearDistEventTitle"
        android:background="@color/colorPrimaryLight"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="55dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/infoLastYearDistEvventsUnderLine"
        android:layout_margin="5dp"
        android:background="@drawable/round_rect_bg"
        android:id="@+id/distLastYearEventsDetail">
        <ImageView
            android:id="@+id/lastYearEventImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/mero_sip"/>
        <TextView
            android:id="@+id/distEventsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:text="@string/mero_sip"/>
        <TextView
            android:id="@+id/distEventsVeneue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:text="@string/tangal_higher_secodary_school"/>
        <TextView
            android:id="@+id/distEventsTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:text="@string/_07_00_am_to_08_00_am"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/distUpComingEventsDetail"
        android:layout_below="@id/distLastYearEventsDetail"
        android:background="@drawable/round_rect_bg"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/upComingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:text="@string/up_coming_club_events"
            android:layout_margin="5dp"/>
        <View
            android:id="@+id/infoUpComingDistEventUnderLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"
            android:background="@color/colorPrimaryLight"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="5dp" />
        <include layout="@layout/upcoming_event_adapter"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>