<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_rect_bg">
    <ImageView
        android:id="@+id/clubBODprofile"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/colorlogo_rotaractnepalapp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/bodClubLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/colorlogo_rotaractnepalapp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/clubBODname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="@string/rtr_name"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/clubBODdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/clubBODname"
            android:layout_alignStart="@id/clubBODname"
            android:layout_below="@id/clubBODname"
            android:text="@string/rtr_designation"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="5dp">
        <include layout="@layout/cust_alert_butttom_layout"/>
    </RelativeLayout>
</LinearLayout>